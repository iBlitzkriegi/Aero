<?xml version="1.0" encoding="UTF-8"?>
<project name="module_dankg_remastered" default="compile.module.dankg_remastered">
  <dirname property="module.dankg_remastered.basedir" file="${ant.file.module_dankg_remastered}"/>
  
  <property name="module.jdk.home.dankg_remastered" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.dankg_remastered" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.dankg_remastered" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.dankg_remastered" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="dankg_remastered.output.dir" value="${module.dankg_remastered.basedir}/out/production/DankG Remastered"/>
  <property name="dankg_remastered.testoutput.dir" value="${module.dankg_remastered.basedir}/out/test/DankG Remastered"/>
  
  <path id="dankg_remastered.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="dankg_remastered.module.production.classpath">
    <path refid="${module.jdk.classpath.dankg_remastered}"/>
    <path refid="library.javacord-2.0.10-shaded.classpath"/>
    <path refid="library.logback-core-1.1.3.classpath"/>
    <path refid="library.logback-classic-1.0.13.classpath"/>
  </path>
  
  <path id="dankg_remastered.runtime.production.module.classpath">
    <pathelement location="${dankg_remastered.output.dir}"/>
    <path refid="library.javacord-2.0.10-shaded.classpath"/>
    <path refid="library.logback-core-1.1.3.classpath"/>
    <path refid="library.logback-classic-1.0.13.classpath"/>
  </path>
  
  <path id="dankg_remastered.module.classpath">
    <path refid="${module.jdk.classpath.dankg_remastered}"/>
    <pathelement location="${dankg_remastered.output.dir}"/>
    <path refid="library.javacord-2.0.10-shaded.classpath"/>
    <path refid="library.logback-core-1.1.3.classpath"/>
    <path refid="library.logback-classic-1.0.13.classpath"/>
  </path>
  
  <path id="dankg_remastered.runtime.module.classpath">
    <pathelement location="${dankg_remastered.testoutput.dir}"/>
    <pathelement location="${dankg_remastered.output.dir}"/>
    <path refid="library.javacord-2.0.10-shaded.classpath"/>
    <path refid="library.logback-core-1.1.3.classpath"/>
    <path refid="library.logback-classic-1.0.13.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.dankg_remastered">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.dankg_remastered">
    <patternset refid="excluded.from.module.dankg_remastered"/>
  </patternset>
  
  <path id="dankg_remastered.module.sourcepath">
    <dirset dir="${module.dankg_remastered.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.dankg_remastered" depends="compile.module.dankg_remastered.production,compile.module.dankg_remastered.tests" description="Compile module DankG Remastered"/>
  
  <target name="compile.module.dankg_remastered.production" depends="register.custom.compilers" description="Compile module DankG Remastered; production classes">
    <mkdir dir="${dankg_remastered.output.dir}"/>
    <javac2 destdir="${dankg_remastered.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.dankg_remastered}/javac">
      <compilerarg line="${compiler.args.dankg_remastered}"/>
      <bootclasspath refid="dankg_remastered.module.bootclasspath"/>
      <classpath refid="dankg_remastered.module.production.classpath"/>
      <src refid="dankg_remastered.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.dankg_remastered"/>
    </javac2>
    
    <copy todir="${dankg_remastered.output.dir}">
      <fileset dir="${module.dankg_remastered.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.dankg_remastered.tests" depends="register.custom.compilers,compile.module.dankg_remastered.production" description="compile module DankG Remastered; test classes" unless="skip.tests"/>
  
  <target name="clean.module.dankg_remastered" description="cleanup module">
    <delete dir="${dankg_remastered.output.dir}"/>
    <delete dir="${dankg_remastered.testoutput.dir}"/>
  </target>
</project>